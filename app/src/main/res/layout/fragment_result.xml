<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/blue"
            android:text="Индекс массы тела (кг/м2)"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textRe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="Результат: "
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textRe"
            android:layout_alignBottom="@+id/textRe"
            android:layout_toEndOf="@+id/textRe"
            android:text="142"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textNorm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRe"
            android:text="Норма: "
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/norm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textNorm"
            android:layout_alignBottom="@+id/textNorm"
            android:layout_toEndOf="@+id/textNorm"
            android:text="18.25-15"
            android:textAppearance="?attr/textAppearanceListItem" />
    </RelativeLayout>


</LinearLayout>