<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calc.LifeIndexActivity">
   <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дающий косвенное представление о функциональных возможностях системы внешнего дыхания."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextGEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Жизненная емкость легких (мл)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/textInfo" />

    <EditText
        android:id="@+id/editTextM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Масса тела (кг)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/editTextGEL" />


    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Продолжить"
        app:layout_constraintTop_toBottomOf="@id/editTextM" />
</androidx.constraintlayout.widget.ConstraintLayout>